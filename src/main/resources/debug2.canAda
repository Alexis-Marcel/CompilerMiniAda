with Ada.Text_IO; use Ada.Text_IO;
procedure unDebut is
type point is record
    x : integer;
    y : integer;
end record;

function perimetreRectangle(larg : integer; long : integer) return point is
dot : point;
begin
    dot.x := larg +2;
    dot.y := long +2;
return dot ;
end perimetreRectangle;

choix : point;

begin
choix := perimetreRectangle(5, 10);
end unDebut ;